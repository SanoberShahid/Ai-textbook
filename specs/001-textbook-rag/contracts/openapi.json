{
  "swagger": "2.0",
  "info": {
    "title": "RAG Chatbot API",
    "description": "API for the RAG chatbot.",
    "version": "1.0.0"
  },
  "paths": {
    "/query": {
      "post": {
        "summary": "Ask a question to the RAG chatbot.",
        "consumes": ["application/json"],
        "produces": ["application/json"],
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "description": "User query.",
            "required": true,
            "schema": {
              "$ref": "#/definitions/Query"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful response.",
            "schema": {
              "$ref": "#/definitions/Response"
            }
          }
        }
      }
    }
  },
  "definitions": {
    "Query": {
      "type": "object",
      "properties": {
        "query_text": {
          "type": "string",
          "example": "What is ROS 2?"
        }
      }
    },
    "Response": {
      "type": "object",
      "properties": {
        "response_text": {
          "type": "string",
          "example": "ROS 2 is a set of software libraries and tools for building robot applications."
        },
        "source_documents": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "example": ["doc-1", "doc-2"]
        }
      }
    }
  }
}
